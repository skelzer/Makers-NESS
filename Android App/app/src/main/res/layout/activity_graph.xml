<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"

    android:paddingRight="0dp"
    android:paddingTop="0dp"

    tools:context="com.example.almudena.mad_btv1.Graph"
    android:background="#8b8888">
    <ImageView
        android:layout_width="46dp"
        android:layout_height="54dp"
        android:id="@+id/imageView6"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_logo"
        android:adjustViewBounds="true"
        android:maxHeight="25dp"
        android:maxWidth="25dp"
        android:minHeight="25dp"
        android:minWidth="25dp"
        android:padding="2dp"
        android:elevation="5dp" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#444444"
        android:elevation="4dp"
        android:layout_marginTop="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_alignParentStart="true" />
    <com.jjoe64.graphview.GraphView
        android:layout_width="350dp"
        android:layout_height="140dp"
        android:id="@+id/graph"
        android:visibility="invisible"
        android:layout_below="@+id/imageView8"
        android:layout_centerHorizontal="true"
        android:elevation="2dp" />
    <com.jjoe64.graphview.GraphView
        android:layout_width="350dp"
        android:layout_height="140dp"
        android:id="@+id/graph2"
        android:visibility="visible"
        android:layout_alignTop="@+id/graph"
        android:layout_centerHorizontal="true" />
    <com.jjoe64.graphview.GraphView
        android:layout_width="350dp"
        android:layout_height="140dp"
        android:id="@+id/graph3"
        android:visibility="visible"
        android:layout_alignTop="@+id/graph"
        android:layout_centerHorizontal="true" />
    <com.jjoe64.graphview.GraphView
        android:layout_width="350dp"
        android:layout_height="140dp"
        android:id="@+id/graph4"
        android:visibility="visible"
        android:layout_alignTop="@+id/graph"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:background="#484646"
        android:layout_below="@+id/my_toolbar"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView7" />
    <ImageView
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:background="#5d5a5a"
        android:id="@+id/imageView8"
        android:layout_below="@+id/imageView7"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USAGE STATISTICS"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/imageView7"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="28dp"
        android:typeface="sans"
        android:layout_marginBottom="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="80 F"
        android:id="@+id/textView2"
        android:textColor="#ffffff"
        android:textSize="@dimen/abc_action_bar_stacked_max_height"
        android:layout_alignTop="@+id/imageView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:typeface="sans"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="temperature"
        android:id="@+id/textView3"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:typeface="sans"
        android:layout_marginTop="10dp" />
    <ImageView
        android:layout_width="127dp"
        android:layout_height="180dp"
        android:id="@+id/imageView10"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/graph"
        android:background="@drawable/fondo5d5a5a" />

    <ImageView
        android:layout_width="127dp"
        android:layout_height="180dp"
        android:id="@+id/imageView9"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/graph"
        android:layout_alignStart="@+id/graph"
        android:layout_alignBottom="@+id/graph"
        android:background="@drawable/fondo5d5a5a"
        android:layout_toStartOf="@+id/imageView10"
        android:layout_marginRight="3dp" />

    <ImageView
        android:layout_width="127dp"
        android:layout_height="180dp"
        android:id="@+id/imageView11"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/graph"
        android:layout_below="@+id/graph"
        android:layout_toEndOf="@+id/textView3"
        android:background="@drawable/fondo5d5a5a" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Time\nWorking"
        android:id="@+id/textView4"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:typeface="sans"
        android:gravity="center_vertical|center_horizontal"
        android:clickable="true"
        android:layout_below="@+id/graph"
        android:layout_toStartOf="@+id/textView3"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="12dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Number\n of Cycles"
        android:id="@+id/textView5"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:typeface="sans"
        android:gravity="center_vertical|center_horizontal"
        android:clickable="true"
        android:layout_below="@+id/graph"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gallons\n Saved"
        android:id="@+id/textView6"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:typeface="sans"
        android:clickable="true"
        android:layout_below="@+id/graph"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:layout_alignEnd="@+id/graph"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:max="20"
        android:progress="1"
        android:indeterminate="false"
        android:layout_alignEnd="@+id/textView"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView" />

</RelativeLayout>
